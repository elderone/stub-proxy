{
  "name": "stubproxy",
  "version": "1.0.0",
  "description": "get proxy settings from user and reload",
  "main": "src/app.js",
  "repository": "https://github.com/elderone/stub-proxy",
  "license": "MIT",
  "scripts": {
    "serve": "nodemon --experimental-modules src/app.js",
    "debug": "DEBUG=express:* nodemon --experimental-modules src/app.js",
    "start": "node --experimental-modules src/app.js",
    "pretest": "eslint --ignore-path .gitignore ."
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "import/extensions": [
        "error",
        "always"
      ],
      "max-len": "off",
      "no-console": "off",
      "object-curly-newline": "off",
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ]
    }
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "express": "^4.17.3",
    "hbs": "^4.2.0"
  }
}
